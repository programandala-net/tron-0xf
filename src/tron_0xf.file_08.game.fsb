( READY )

: READY2  ( -- )
  \ Set the players' positions before a new round,
  \ for two players.
   40 XC1 ! 88 YC1 !  RIGHT-INCS XINC1 2!
  215 XC2 ! 88 YC2 !  LEFT-INCS  XINC1 2!  ;

: READY3  ( -- )
  \ Set the players' positions before a new round,
  \ for three players.
   40 XC1 ! 127 YC1 !  RIGHT-INCS XINC1 2!
  215 XC2 ! 127 YC2 !  LEFT-INCS  XINC2 2!
  127 XC3 !  40 YC3 !  UP-INCS    XINC3 2!  ;

HERE: (READY)
  \ Execution table for `READY`.
  ' READY2 CFA , ' READY3 CFA ,
  
: READY  ( -- )
  \ Set the players' positions before a new round.
  PLAYERS 2 - CELLS (READY) + @ EXECUTE  ;

( Round)

: ROUND-INIT  ( -- )
  CLEAR-ARENA READY PAINT1 PAINT2 PAINT3  AKEY DROP  ;

: ROUND  ( -- f )
  \ f = Break key pressed?
  ROUND-INIT
  FALSE  \ default exit flag
  BEGIN
    MOVE1 MOVE2 MOVE3
    CRASH1? IF  CRASH +SCORES EXIT  THEN  PAINT1 NOISE1
    CRASH2? IF  CRASH +SCORES EXIT  THEN  PAINT2 NOISE2
    CRASH3? IF  CRASH +SCORES EXIT  THEN  PAINT3 NOISE3
  ?TERMINAL UNTIL  0=  ;

( Game)

: ENOUGH?  ( -- f )
  \ No more rounds?
  WHITE INK  ANOTHER?$ 12 <LINETYPE>  NO?  ;

: GAME-INIT  ( -- )
  SCORE1 OFF  SCORE2 OFF  SCORE3 OFF
  CLS0 ARENA SAVE-ARENA  ;

: GAME  ( -- )
  GAME-INIT BEGIN  ROUND  UNTIL  ;

